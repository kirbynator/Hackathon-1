
<% if user_signed_in? %>
<div class="ui secondary menu">
      <%= link_to root_path do %>
        <p class="ui item">TRAVEL<p>
      <% end %>
       <div class="right menu">
          <p class="ui item"><%= current_user.email %></p>
          <%= link_to edit_user_registration_path do %>
            <p class="ui item">Edit Profile</p>
          <% end%>
          <%= link_to destroy_user_session_path, method: :delete do  %>
            <p class="ui item">Logout</p>
            <% end %>
      </end>
      </div>
<% else %>
      <div class="ui secondary menu">
        <p class="ui item">
          TRAVEL
        </p>
       <div class="right menu">

          <%= link_to new_user_registration_path do %> 
            <p class="ui item">Sign Up</p>
          <% end %>
          <%= link_to new_user_session_path do %>
            <p class="ui item">Sign In</p>
          <% end %>
      </div>
      </div>
    <% end %>
</div>