<h1><%= @address.id ? 'Edit Address' : 'Create Address' %></h1>
<hr />
<%= form_with(model: [@location, @address], local: true, class: "ui form") do |f| %>
  <%= f.label :street %>
  <%= f.text_field :street, required: true, placeholder: "Street" autofocus: true %>
  <br />
  <%= f.label :city %>
  <%= f.text_field :city, required: true, placeholder: "City"%>
  <br />
  <%= f.label :state %>
  <%= f.text_field :state, required: true, placeholder: "State" %>
  <br />
  <%= f.label :zip %>
  <%= f.number_field :zip, required: true, placeholder: "Zip " %>
  <br />
  <%= f.submit nil, class: "ui button" %>
<% end %>