<h1><%= @trip.id ? 'Edit Trip' : 'New Trip' %></h1>
<%= form_with(model: @trip, local: true, class: 'ui form') do |f| %>
    <div class='field'>
        <%= f.label :name %>
        <%= f.text_field :name, required: true, placeholder: 'trip Name' %>
    </div>
    <%= f.submit nil, class: 'ui small blue button inverted' %>
    <%= link_to 'Back', :back, class: 'ui small secondary button inverted' %>
<% end %>